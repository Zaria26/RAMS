@model Rcsa.Web.Models.UserProfile

@{
    Layout = "~/Views/Shared/_SubLayout.cshtml";
    ViewBag.Title = "Details";
}

<h3 class="upcoming-head" style="margin-bottom: 5px; text-align:center">Consultant Details</h3>
<div class="form1" style="text-align: left; margin-left: 20px">
    <table id="hor-minimalist-b" style="margin: 7px 10px 62px -20px;">
        <tbody>
            <tr>
                <td style="width: 216px;">
                    <label>User Name </label>
                </td>
                <td>
                    @Html.DisplayFor(model => model.UserName)
                </td>

            </tr>

            <tr>
                <td>
                    <label>Name </label>
                </td>
                <td>
                    @Html.DisplayFor(model => model.FirstName) @Html.DisplayFor(model => model.LastName)
                </td>

            </tr>


            <tr>
                <td>
                    <label>Email</label>
                </td>
                <td>
                    @Html.DisplayFor(model => model.Email)
                </td>

            </tr>

        </tbody>
    </table>




    <div style="float: right; clear: both; margin-bottom: 20px; margin-right: 40px;">
        <strong><u>@Html.ActionLink("Edit", "Update", new { userId = Model.UserId, page=ViewBag.CurrentlyOnPage })</u></strong> |
    <strong><u>@Html.ActionLink("Back to List", "ConsultantUsers", new { page = ViewBag.CurrentlyOnPage }))</u></strong>
    </div>
</div>

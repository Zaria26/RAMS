            //    $('#ddlSubriskImpact ').attr('disabled', true);
            //    $('#ddlSubriskLikelihood ').attr('disabled', true);
            //    $('#ddlMitigantImportance ').attr('disabled', true);
            //    $('#btnSearch').hide();
            //} else {

            //    $('#ddlCompany').removeAttr('disabled');

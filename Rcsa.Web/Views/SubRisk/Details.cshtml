@model Rcsa.Web.Models.SubRiskMaster

@{
    Layout = "~/Views/Shared/_SubLayout.cshtml";
    ViewBag.Title = "Details";
}

<h3 class="upcoming-head" style="margin-bottom: 5px; text-align: center;">Sub-Risk Detail</h3>
<div class="form1" style="text-align: left; margin-left: 20px">
    <table id="hor-minimalist-b" style="margin: 7px 10px 62px -20px;" >
    <tbody >
        <tr>
            <td>
                <label>Sub Risk Name</label>
            </td>
            <td>
                 @Html.DisplayFor(model => model.SubRiskName)
            </td>
            
        </tr>

         <tr>
            <td>
               <label>Risk</label>
            </td>
            <td>
                  @Html.DisplayFor(model => model.RisksMaster.RiskName)
            </td>
            
        </tr>


        <tr>
            <td>
               <label>Description</label>
            </td>
            <td>
                 @Html.DisplayNameFor(model => model.SubRiskDesc)
            </td>
            
        </tr>
       
       

</tbody></table>




<div style="float:right;clear:both;margin-bottom:20px;margin-right:40px;">
    <strong><u>@Html.ActionLink("Edit", "Edit", new { id = Model.SubRiskId, page = ViewBag.CurrentlyOnPage })</u></strong> |
    <strong><u>@Html.ActionLink("Back to List", "SubRiskDetails", new {page = ViewBag.CurrentlyOnPage })</u></strong>
    </div>
</div>

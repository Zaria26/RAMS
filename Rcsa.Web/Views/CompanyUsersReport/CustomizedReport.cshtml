                </td>
                <td>
                    @Html.DropDownList("Mitigant_Importance", new SelectList(model.LevelOfSeverityImpacts, "Value", "Text"), "Select", new { id = "ddlMitigantImportance", style = "width:140px;height:24px;" })
                </td>
                <td>
